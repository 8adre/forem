<span data-controller="modal" data-modal-trap-area-id-value="edit-navigation-link-<%= link[:id] %>-modal" data-modal-activator-id-value="edit-<%= link[:id] %>-button">
  <button id="edit-<%= link[:id] %>-button" data-action="modal#toggleModal" data-modal-target="activator" class="color-accent-warning-darker crayons-btn crayons-btn--ghost-warning">
    Edit Link
  </button>

  <div id="edit-navigation-link-<%= link[:id] %>-modal" data-modal-target="toggle" class="hidden">
    <div class="crayons-modal crayons-modal--l" id="edit-nav-link-modal-<%= link[:id] %>">
      <div class="crayons-modal__box">
        <header class="crayons-modal__box__header">
          <h2>Edit Link</h2>
          <button type="button" data-action="modal#toggleModal" class="crayons-btn crayons-btn--icon crayons-btn--ghost">
            <svg width="24" height="24" viewBox="0 0 24 24" class="crayons-icon" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 10.586l4.95-4.95 1.414 1.414-4.95 4.95 4.95 4.95-1.414 1.414-4.95-4.95-4.95 4.95-1.414-1.414 4.95-4.95-4.95-4.95L7.05 5.636l4.95 4.95z" />
            </svg>
          </button>
        </header>
        <div class="crayons-modal__box__body">
          <div class="form-group grid p-6 mb-6 gap-1">
            <%= form_for [:admin, link] do |form| %>
              <%= render "form", form: form %>
              <%= form.submit class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="crayons-modal__overlay"></div>
    </div>
  </div>
</span>
